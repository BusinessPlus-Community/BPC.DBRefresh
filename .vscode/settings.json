{
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "powershell.codeFormatting.preset": "OTBS",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "files.defaultLanguage": "powershell",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "window.zoomLevel": 0,
    "editor.mouseWheelZoom": true,
    "powershell.enableProfileLoading": true,
    "powershell.integratedConsole.showOnStartup": false,
    "files.associations": {
        "*.ps1": "powershell"
    },
    "powershell.scriptAnalysis.settingsPath": "PSScriptAnalyzerSettings.psd1",
    "editor.formatOnSave": true,
    // ===== TERMINAL SETTINGS =====
    "terminal.integrated.defaultProfile.windows": "PowerShell 7",
    "terminal.integrated.profiles.windows": {
        "Debian WSL": {
            "path": "wsl.exe",
            "args": [
                "-d",
                "Debian"
            ],
            "icon": "terminal-linux"
        },
        "PowerShell 7": {
            "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": "${env:windir}\\System32\\cmd.exe",
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "icon": "terminal-bash"
        }
    },
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useConstantStrings": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    // ===== SEARCH & FILE EXCLUSIONS (PERFORMANCE) =====
    "search.exclude": {
        "**/.yarn": true,
        "**/.pnp.*": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/coverage": true,
        "**/.nx": true,
        "**/storybook-static": true,
        "**/context": true, // Exclude context folder from search
        "**/legacy": false // Keep legacy searchable for reference
    },
    "files.exclude": {
        "**/.yarn/cache": true,
        "**/.yarn/unplugged": true,
        "**/.yarn/build-state.yml": true,
        "**/.yarn/install-state.gz": true,
        "**/.nx/cache": true,
        "**/dist": false, // Show dist folders but exclude from watchers
        "**/storybook-static": true
    },
    // Limit file watching scope (CRITICAL FOR PERFORMANCE)
    "files.watcherExclude": {
        "**/.yarn/**": true,
        "**/node_modules/**": true,
        "**/.nx/**": true,
        "**/dist/**": true,
        "**/storybook-static/**": true,
        "**/coverage/**": true,
        "**/context/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true
    },
    // ===== EDITOR SETTINGS (OPTIMIZED) =====
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "editor.linkedEditing": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "sqlfluff.dialect": "tsql",
    "cSpell.words": [
        "Birge",
        "Dbatools"
    ],
    "cSpell.ignoreWords": [
        "Oaep",
        "PSOSP",
        "datamart",
        "erac",
        "onmicrosoft",
        "trustcert"
    ],
    "snyk.advanced.autoSelectOrganization": true
}
