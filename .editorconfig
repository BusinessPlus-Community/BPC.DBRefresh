# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ps1]
indent_style = space
indent_size = 2

[*.{psm1,psd1}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 4

[*.{json,cff}]
indent_style = space
indent_size = 2