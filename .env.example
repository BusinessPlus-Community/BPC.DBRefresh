# BPC.DBRefresh Environment Configuration
# Copy this file to .env and update with your values

# SQL Server Configuration
# For WSL users connecting to Windows SQL Server, use:
# SQLSERVER_HOST=host.docker.internal
# or your Windows host IP address
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_USERNAME=sa
SQLSERVER_PASSWORD=YourStrong@Passw0rd
SQLSERVER_DATABASE=master

# Alternative: Use Windows Authentication (leave password empty)
# SQLSERVER_USERNAME=
# SQLSERVER_PASSWORD=
# SQLSERVER_AUTH=Windows

# Test Database Names
TEST_IFAS_DATABASE=TEST_IFAS
TEST_SYSCAT_DATABASE=TEST_SYSCAT
TEST_ASPNET_DATABASE=TEST_ASPNET

# Backup File Paths (local paths)
BACKUP_PATH=/path/to/your/backups
IFAS_BACKUP=ifas_backup.bak
SYSCAT_BACKUP=syscat_backup.bak
ASPNET_BACKUP=aspnet_backup.bak

# Module Configuration
LOG_PATH=./logs
CONFIG_PATH=./config
TESTING_MODE=false

# GitHub Runner (optional)
RUNNER_TOKEN=
REPO_URL=https://github.com/BusinessPlus-Community/BPC.DBRefresh

# Container Configuration
COMPOSE_PROJECT_NAME=bpc-dbrefresh
TZ=America/New_York
